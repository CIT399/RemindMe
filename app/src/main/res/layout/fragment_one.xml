<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.FragmentOne">

    <TextView
        android:id="@+id/titleLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="43dp"
        android:text="Title:"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/titleTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/titleLbl"
        android:layout_alignStart="@+id/titleLbl"
        android:layout_below="@+id/titleLbl"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/descriptionLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/titleTxt"
        android:layout_alignStart="@+id/titleTxt"
        android:layout_below="@+id/titleTxt"
        android:layout_marginTop="40dp"
        android:text="Description:" />

    <EditText
        android:id="@+id/descriptionTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/descriptionLbl"
        android:layout_alignStart="@+id/descriptionLbl"
        android:layout_below="@+id/descriptionLbl"
        android:ems="10"
        android:inputType="textMultiLine" />

    <TextView
        android:id="@+id/locationLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location Name"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/timeTxt"
        android:layout_alignLeft="@+id/descriptionTxt"
        android:layout_alignStart="@+id/descriptionTxt" />

    <TextView
        android:id="@+id/locationTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/locationLbl"
        android:layout_alignStart="@+id/locationLbl"
        android:layout_below="@+id/locationLbl"
        android:layout_marginTop="18dp"
        android:text="exampleLocation" />

    <TextView
        android:id="@+id/dateTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="exampleDate"
        android:layout_below="@+id/dateLbl"
        android:layout_alignLeft="@+id/dateLbl"
        android:layout_alignStart="@+id/dateLbl" />

    <TextView
        android:id="@+id/dateLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date:"
        android:layout_below="@+id/descriptionTxt"
        android:layout_alignRight="@+id/titleLbl"
        android:layout_alignEnd="@+id/titleLbl"
        android:layout_marginTop="43dp" />

    <TextView
        android:id="@+id/timeLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time:"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/dateTxt"
        android:layout_alignLeft="@+id/dateTxt"
        android:layout_alignStart="@+id/dateTxt" />

    <TextView
        android:id="@+id/timeTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="exampleTime"
        android:layout_below="@+id/timeLbl"
        android:layout_alignLeft="@+id/timeLbl"
        android:layout_alignStart="@+id/timeLbl"
        android:layout_marginTop="23dp" />

</RelativeLayout>
